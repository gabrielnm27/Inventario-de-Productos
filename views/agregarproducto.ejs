<%- include('layouts/header') %>

   <div class="container px-5 my-5">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="text-center">Agregar Producto</h1>
            <form id="add-form" action="/agregar" method="post" enctype="multipart/form-data">
                </div>
                <div class= "mb-3">
                    <label class = "form-label" for="articulo">Articulo</label>
                    <input class="form-control" id="articulo" name="articulo" type="text" placeholder="Articulo">
                 </div>
                    <div class= "mb-3">
                        <label class = "form-label" for="descripcion">Descripcion</label>
                        <input class="form-control" id="descripcion" name="descripcion" type="text" placeholder="Descripcion">
                    </div>
                    <div class= "mb-3">
                        <label class = "form-label" for="stock">Stock</label>
                        <input class="form-control" id="stock" name="stock" type="number" placeholder="Stock">
                    </div>
                    <div class= "mb-3">
                        <label class = "form-label" for="precio">Precio</label>
                        <input class="form-control" id="precio" name="precio" type="number" placeholder="Precio">
                    </div>
                    <div class= "mb-3">
                        <label for= "imagen" class="form-label">Imagen</label>
                        <input name="imagen" class="form-control" type="file" required>
                    </div>

                    <div class="d-grid">
                        <input type="submit" class="btn btn-primary btn-1g" value="Agregar Producto">
                    </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

    
    <%- include('layouts/footer') %>