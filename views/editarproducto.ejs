<%- include('layouts/header') %>

<div class="container px-5 my-5">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="text-center">Editando Producto (<%=productos.articulo%>)</h1>
            <form id="add-form" action="/editar/<%= productos._id %>" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="articulo">Articulo</label>
                    <input class="form-control" value="<%= productos.articulo%>" name="articulo" type="text" placeholder="Articulo">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="descripcion">Descripcion</label>
                    <input class="form-control" value="<%= productos.descripcion%>" name="descripcion" type="text" placeholder="Descripcion">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="stock">Stock</label>
                    <input class="form-control" value="<%= productos.stock%>" name="stock" type="number" placeholder="Stock">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="precio">Precio</label>
                    <input class="form-control" value="<%= productos.precio%>" name="precio" type="number" placeholder="Precio">
                </div>
                <div class="mb-3">
                    <label for="imagen" class="form-label">Imagen</label>
                    <input name="imagen" class="form-control" type="file">
                    <img src="/<%= productos.imagen%>" width="100" class="img-thumbnail mt-1">
                </div>

                <input type="hidden" name="old_image" value="<%= productos.imagen %>">


                <div class="d-grid">
                    <input type="submit" class="btn btn-primary btn-lg" value="Actualizar Producto">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<%- include('layouts/footer') %>
